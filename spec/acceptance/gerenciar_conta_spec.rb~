# coding: utf-8
require 'spec_helper'

feature 'gerenciar conta' do

  scenario 'incluir conta' do #, :javascript => true  do

    consumo  = FactoryGirl.create(:consumo, :descricao => "XXX") 
       

    visit new_conta_path

    preencher_e_verificar_conta
   

  end

  scenario 'alterar conta' do #, :javascript => true  do

    consumo  = FactoryGirl.create(:consumo, :descricao => "XXX")  
    
    conta = FactoryGirl.create(:conta,:consumo => consumo)

    visit edit_conta_path(conta)

    preencher_e_verificar_conta


  end

  scenario 'excluir trem linha' do #, :javascript => true  do

    hotel = FactoryGirl.create(:hotel, :nome => "YYY") 
    

    conta = FactoryGirl.create(:conta,:hotel => hotel)

    visit contas_path

    click_link 'Excluir'
    
    
  end



  def preencher_e_verificar_conta

    select 'YYY', :from => 'hotel'
    

    fill_in 'valor', :with => '20'
    fill_in 'descricao', :with => 'Dois quartos'
    fill_in 'numero', :with => '234'

    click_button 'Salvar'
    
    page.should have_content 'hotel: YYY'
   
    page.should have_content 'valor: 20'
    page.should have_content 'descricao: Dois quartos'
    page.should have_content 'numero: 234'    

  end

end
